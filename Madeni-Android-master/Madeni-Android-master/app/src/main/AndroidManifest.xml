<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.typicalgeek.Madeni">

    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.typicalgeek.Madeni.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.typicalgeek.Madeni.Splash"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts"/>
        </activity>
        <activity
            android:name="com.typicalgeek.Madeni.PasscodeActivity"
            android:label="@string/title_activity_passcode"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.typicalgeek.Madeni.HelpActivity"
            android:label="@string/title_activity_help"
            android:parentActivityName="com.typicalgeek.Madeni.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.typicalgeek.Madeni.MainActivity"/>
        </activity>
        <activity
            android:name="com.typicalgeek.Madeni.RecoveryActivity"
            android:label="@string/title_activity_recovery"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.typicalgeek.Madeni.NewDebtActivity"
            android:label="@string/title_activity_new_debt"
            android:parentActivityName="com.typicalgeek.Madeni.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.typicalgeek.Madeni.MainActivity"/>
        </activity>
        <activity
            android:name="com.typicalgeek.Madeni.DebtsActivity"
            android:label="@string/title_activity_debts"
            android:parentActivityName="com.typicalgeek.Madeni.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.typicalgeek.Madeni.MainActivity"/>
        </activity>
        <activity
            android:name="com.typicalgeek.Madeni.PreferencesActivity"
            android:label="@string/title_activity_preferences"
            android:theme="@style/AppTheme.NoActionBar.BlendStatusBar">
        </activity>
        <activity
            android:name="com.typicalgeek.Madeni.SummaryActivity"
            android:label="@string/title_activity_summary"
            android:parentActivityName="com.typicalgeek.Madeni.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.typicalgeek.Madeni.MainActivity"/>
        </activity>
        <activity
            android:name="com.typicalgeek.Madeni.Setup"
            android:label="Setup"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>